<% include header %>

<h1> Create New Thread
    <a href="/users/listthreads" class="btn btn-primary pull-right">All Threads</a>
</h1>

<form method="post" role="form" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <textarea class="form-control" id="title" name="title" placeholder="What's on your mind?" rows="3"
            required></textarea>
    </div>

    <div class="form-group">
        <input type="file" value="Upload" id="imageFile" name="imageFile" />
        <input type="submit" value="Create" class="btn btn-primary float-right" />
    </div>

</form>
<% include footer %>