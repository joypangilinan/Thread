<% include header %>

<h1>A Thread     
    <a href="/users/listthreads" class="btn btn-primary pull-right">All Threads</a>
</h1>

<form method="post" role="form">
    <div class="form-group">
        <textarea class="form-control" id="title" name="title" placeholder="Your thread here" rows="3" required></textarea>
        <input type="button" value="Edit" class="btn btn-primary pull-right"/>
        <input type="button" value="Delete" class="btn btn-primary pull-right"/>
    </div>
    <div class="form-group">
        <textarea class="form-control" id="comment" name="comment" placeholder="Type your comment here" rows="3" required></textarea>
        <input type="submit" value="Comment" class="btn btn-success"/>

    </div>
    
</form>

<% include footer %>