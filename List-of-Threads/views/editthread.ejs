<a href="/users/listthreads" class="btn btn-primary float-right">Back</a>
<h2>Update Thread</h2>

<form method="post" role="form">
    <div class="form-group">
        <label for="title">Title</label>
        <textarea class="form-control" id="title" name="title" rows="3" required><%= threads.title %></textarea>
    </div>

    <div class="form-group">
        <input type="file" value="Upload" />
        <input type="submit" value="Update" class="btn btn-primary float-right" />
    </div>
</form>

